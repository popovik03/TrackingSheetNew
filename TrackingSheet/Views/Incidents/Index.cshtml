<table class="table table-striped" style="font-size: 16px; width: 97%; margin-right: 2%; margin-left: 1%">
    <thead class="thead-dark" style="background-color: lightgray">
        <tr>
            <th width="5%">Дата</th>
            <th>Смена</th>
            <th>431</th>
            <th>VSAT</th>
            <th>Скважина</th>
            <th>Рейс</th>
            <th>SavedNPT</th>
            <th>Тип проблемы</th>
            <th style="width: 10em; text-align: center">Status</th>
            <th class="solution-column">Описание/решение</th>
            <th>Отметка</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incidents in Model)
        {
            <tr>
                <td width="5%">@incidents.Date.ToString("dd-MM-yyyy hh:mm")</td>
                <td>@incidents.Shift</td>
                <td>@incidents.Reporter</td>
                <td>@incidents.VSAT</td>
                <td>@incidents.Well</td>
                <td>@incidents.Run</td>
                <td>@incidents.SavedNPT</td>
                <td width="5%">@incidents.ProblemType</td>
                @if (@incidents.Status?.IndexOf("Success", StringComparison.OrdinalIgnoreCase) >= 0)
                {
                    <td style="width: 10em; text-align: center;background-color: lawngreen">@incidents.Status</td>
                }
                else if (@incidents.Status?.IndexOf("Process", StringComparison.OrdinalIgnoreCase) >= 0)
                {
                    <td style="width: 10em; text-align: center; background-color: yellow">@incidents.Status</td>
                }
                else if (@incidents.Status?.IndexOf("Fail", StringComparison.OrdinalIgnoreCase) >= 0)
                {
                    <td style="width: 10em; text-align: center; background-color: orangered">@incidents.Status</td>
                }
                else if (@incidents.Status?.IndexOf("0", StringComparison.OrdinalIgnoreCase) >= 0)
                {
                    <td style="width: 10em; text-align: center; background-color: darkgrey">None</td>
                }
                <td class="solution-column">@incidents.Solution</td>
                <td>@incidents.HighLight</td>
                <td><a class="btn btn-primary btn-sm" href="View/@incidents.ID">Обзор</a></td>

            </tr>
        }
    </tbody>
</table>
