@{
    ViewData["Title"] = "Журнал инцидентов";

}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Подключаем библиотеки -->

    <script src="@Url.Content("~/vendor/jquery/dist/jquery.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net/js/dataTables.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net-buttons/js/dataTables.buttons.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net-buttons-dt/js/buttons.dataTables.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net-select/js/dataTables.select.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net-select-dt/js/select.dataTables.js")"></script>
    <script src="@Url.Content("~/vendor/datatables.net-datetime/dist/dataTables.dateTime.min.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/vendor/datatables.net-buttons-dt/css/buttons.dataTables.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/datatables.net-select-dt/css/select.dataTables.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/datatables.net-datetime/dist/dataTables.dateTime.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/datatables.net-dt/css/dataTables.dataTables.css")">

    <!-- Подключаем библиотеки для работы с Excel -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>

    <!-- Подключаем JavaScript файл с логикой -->
    <script src="@Url.Content("~/js/journal_incident1.js")"></script>

    <!-- Стиль для кнопки экспорта -->
    <style>
        .export-button-container {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .export-button-container button {
                background: none;
                border: none;
                padding: 0;
                cursor: pointer;
                display: flex;
                align-items: center;
                transition: transform 0.2s;
            }

                .export-button-container button:hover {
                    transform: scale(1.1);
                }

            .export-button-container img {
                height: 32px; /* Размер иконки Excel */
                width: auto;
            }

        .export-label {
            font-size: 24px; /* Размер шрифта для текста "Экспорт" */
            margin-right: 10px;
            font-weight: bold;
        }

        #date-range-filter {
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <h1 style="display: flex; justify-content: space-between; align-items: center;">
        <span>Журнал инцидентов</span>
        <div class="export-button-container">
            <span class="export-label">Экспорт</span>
            <button id="exportToExcel" title="Экспортировать в Excel">
                <img src="@Url.Content("~/img/excel.png")" alt="Экспорт в Excel">
            </button>
        </div>
    </h1>

    <div id="date-range-filter" style="margin-bottom: 10px; justify-content: center; align-items:center; display: flex">
        <label for="min-date">С </label>
        <input type="date" id="min-date">
        <label for="max-date"> По </label>
        <input type="date" id="max-date">
    </div>

    <div class="table_container">
        <section class="table__body">
            <table id="journal_table" class="display">
                <thead>
                    <tr>
                        <th>Дата</th>
                        <th>Смена</th>
                        <th>431</th>
                        <th>VSAT</th>
                        <th>Скважина</th>
                        <th>Рейс</th>
                        <th>Сохр. НПВ</th>
                        <th>Тип проблемы</th>
                        <th>Статус</th>
                        <th>Описание/Решение</th>
                        <th>Отметка</th>
                        <th>Обзор</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var incidents in Model)
                    {
                        <tr>
                            <td data-order="@incidents.Date.ToString("yyyy-MM-ddTHH:mm:ss")">
                                @incidents.Date.ToString("dd-MM-yyyy HH:mm")
                            </td>



                            <td>@incidents.Shift</td>
                            <td>@incidents.Reporter</td>
                            <td>@incidents.VSAT</td>
                            <td>@incidents.Well</td>
                            <td>@incidents.Run</td>
                            <td>@incidents.SavedNPT</td>
                            <td>@incidents.ProblemType</td>
                            @if (@incidents.Status?.IndexOf("Success", StringComparison.OrdinalIgnoreCase) >= 0)
                            {
                                <td style="background-color: lawngreen">@incidents.Status</td>
                            }
                            else if (@incidents.Status?.IndexOf("Process", StringComparison.OrdinalIgnoreCase) >= 0)
                            {
                                <td style="background-color: yellow">@incidents.Status</td>
                            }
                            else if (@incidents.Status?.IndexOf("Fail", StringComparison.OrdinalIgnoreCase) >= 0)
                            {
                                <td style="background-color: orangered">@incidents.Status</td>
                            }
                            else
                            {
                                <td style="background-color: darkgrey">None</td>
                            }
                            <td>@incidents.Solution</td>
                            <td>@incidents.HighLight</td>
                            <td><a href="View/@incidents.ID">Обзор</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</body>

</html>