@{
    ViewData["Title"] = "Select IP Address";
}

<h2>Select IP Address</h2>

<form asp-action="SetIpAddress" method="post">
    <div class="form-group">
        <label for="ipPart">Select the last part of IP address:</label>
        <select id="ipPart" name="ipPart" class="form-control">
            @for (int i = 1; i <= 100; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>