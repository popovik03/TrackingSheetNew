    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentPage = window.currentPage;

            // Удалите класс 'active' у всех элементов меню
            var menuItems = document.querySelectorAll('#menuList li');
            menuItems.forEach(function (item) {
                item.classList.remove('active');
            });

            // Найдите элемент меню для текущей страницы и добавьте класс 'active'
            var activeMenuItem = document.getElementById(currentPage);
            if (activeMenuItem) {
                activeMenuItem.classList.add('active');
            }
        });
    </script>
